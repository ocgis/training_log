<%= link_to "%s %s" % [training.date_yyyy_mm_dd, training.kind], training %>
<%= training.duration_hh_mm_ss %>
<%= training.distance_km %>

<% if not training.description.blank? %>
<br />
<%= sanitize training.description.gsub("\n", '<BR />') %>
<% end %>

<% if not training.route_id.nil? %>
<br />
<%= link_to training.route.name, training.route %>
<% end %>
